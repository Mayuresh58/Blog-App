@model Blog_App.Models.Post

@{
    ViewBag.Title = "Post Details";
}

<h2>Post Details</h2>

<div class="card">
    <div class="card-header">
        <h3>@Model.Title</h3>
    </div>
    <div class="card-body">
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Created Date:</strong> @Model.CreatedDate</p>

        <div class="post-content">
            @Model.Comtent
        </div>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Edit", "Edit", new { id = Model.PostId }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>